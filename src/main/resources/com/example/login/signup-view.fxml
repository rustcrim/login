<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="signUpBox" alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="auth.SignUpController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <Label text="Create Account" style="-fx-font-size: 24px; -fx-font-weight: BOLD;" />
    <TextField fx:id="usernameField" promptText="Username" maxWidth="300.0"/>
    <TextField fx:id="nameField" promptText="Name" maxWidth="300.0"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300.0"/>
    <TextField fx:id="dobField" promptText="DOB (DD/MM/YYYY)" maxWidth="300.0"/>
    <TextField fx:id="genderField" promptText="Gender" maxWidth="300.0"/>
    <Button text="Sign Up" onAction="#onSignUpButtonClick" maxWidth="300.0"/>
</VBox>
